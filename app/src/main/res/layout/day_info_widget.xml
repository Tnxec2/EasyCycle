<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Widget.EasyCycle.AppWidget.Container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.EasyCycle.AppWidgetContainer"
    android:id="@+id/appwidget_widgetRoot"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_margin="8sp"
        style="@style/Widget.EasyCycle.AppWidget.Container"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
        <TextView
            android:id="@+id/appwidget_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="@string/appwidget_title"
            android:text="@string/appwidget_title"
            android:textSize="24sp"
            android:textStyle="bold|italic"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/appwidget_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/appwidget_description"
        android:text="@string/appwidget_description"
        android:textSize="16sp"
        android:ellipsize="end"
        android:maxLines="5"
        />

    </LinearLayout>
</RelativeLayout>