<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.EasyCycle" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnBackground">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="colorOnSunday">@color/sunday_current</item>
        <item name="colorOnSundayInactiv">@color/sunday_notcurrent</item>
        <item name="colorOnDay">@color/day_current</item>
        <item name="colorOnDayInactiv">@color/day_notcurrent</item>
        <item name="colorOnMainBackground">@color/background</item>
        <item name="colorOnCardBackground">@color/background_infocard</item>

    </style>

    <style name="Theme.EasyCycle.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.EasyCycle.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.EasyCycle.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.EasyCycle.AppWidgetContainerParent" parent="@android:style/Theme.DeviceDefault">
        <item name="appWidgetRadius">8dp</item>
        <item name="appWidgetPadding">4dp</item>
        <item name="appWidgetInnerRadius">4dp</item>
    </style>

    <style name="Theme.EasyCycle.AppWidgetContainer" parent="Theme.EasyCycle.AppWidgetContainerParent" />
</resources>